                .q-feedback__decor

                .q-feedback__slider
                    .q-feedback__item
                        .q-feedback__wrapper
                            .q-feedback__img
                                img(src="img/feedback.png")
                            .q-feedback__box
                                p.q-feedback__name
                                    | Александра Иванова
                                p.q-feedback__text
